<project name="PHPUnitTest">
 <exec executable="/usr/local/bin/phpunit" failonerror="true">
  <arg line=" UnitTest NewClassTest.php" />
 </exec>
 <exec dir="."
      command="phpunit --log-junit 'reports/unitreport.xml'
                       --coverage-html 'reports/coverage'
                       --coverage-clover 'reports/coverage/coverage.xml'
                       test/"
/>
 <copy file="NewClass.php" tofile="builds/NewClass.php"/>
</project>
